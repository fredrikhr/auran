    string secondsLink = "<a href='" + Link("secondsValue") + "'>" + TwoDigits(GetSeconds()) + "</a>";
    
    string htmlPage = m_assetStrTable.GetString3(m_configPrefix + "-html-property-timemask", hoursLink, minutesLink, secondsLink);
