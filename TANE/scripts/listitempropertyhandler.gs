  {
    if ((m_currentSelection < 0)  or  (m_currentSelection >= m_itemSettings.size()))
      m_currentSelection = 0; // reset to 0 (the first one) as a default

    int i;
    for (i = 0; i < m_itemSettings.size(); i++)
