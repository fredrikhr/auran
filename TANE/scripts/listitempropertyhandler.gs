//  [ "set-junctions-html-property"        | "$0"                                             ]
//  [ "set-junctions-blank-string"         | "&lt;i&gt;click to select&lt;/i&gt;"             ]
//  [  |  ]
//  [ "set-junctions-add"                  | "Add Junction"                                   ]
//  [ "set-junctions-name-add"             | "Junctions"                                      ]
//  [ "set-junctions-desc-add"             | "Junction to add to the list"                    ]
